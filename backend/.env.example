# Agent Mitra Backend - Environment Configuration
# Copy this file to .env.local and update with your actual values

# Application Configuration
APP_NAME=Agent Mitra API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8012

# Database Configuration
DATABASE_URL=postgresql://agentmitra:agentmitra_dev@localhost:5432/agentmitra_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Security & Authentication
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_PER_HOUR=5

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_OTP=5/hour
RATE_LIMIT_IMPORT=5/minute
RATE_LIMIT_ANALYTICS=50/minute

# External APIs
OPENAI_API_KEY=

# SMS Provider
SMS_PROVIDER=twilio
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# Email Provider
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=

# FeatureHub Configuration
FEATUREHUB_URL=http://localhost:8080
FEATUREHUB_API_KEY=
FEATUREHUB_ENVIRONMENT=development
FEATUREHUB_SDK_KEY=
FEATUREHUB_POLL_INTERVAL=30
FEATUREHUB_STREAMING=true

# Feature Flags (Legacy)
ENABLE_MOCK_DATA=false
ENABLE_ANALYTICS=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_CHATBOT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=
LOG_JSON_FORMAT=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Compliance
IRDAI_COMPLIANCE_ENABLED=true
DPDP_COMPLIANCE_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_ENABLED=true
