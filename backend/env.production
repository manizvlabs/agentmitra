# Agent Mitra - Production Environment Configuration
# Copy this file to env.production and update values for your production environment

# Application
APP_NAME=Agent Mitra API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server
API_HOST=0.0.0.0
API_PORT=8012

# Database (Production)
DATABASE_URL=postgresql://agentmitra_prod_user:secure_prod_password@prod-db-host:5432/agentmitra_prod

# Redis (Production)
REDIS_URL=redis://prod-redis-host:6379
REDIS_DB=0
REDIS_PASSWORD=secure_redis_password

# Security & Authentication
JWT_SECRET_KEY=production-jwt-secret-key-must-be-secure-256-bits
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_PER_HOUR=5

# Rate Limiting (Production - strict limits)
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=600/hour
RATE_LIMIT_OTP=50/hour
RATE_LIMIT_IMPORT=50/minute
RATE_LIMIT_ANALYTICS=500/minute

# External APIs
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# SMS Provider (Production)
SMS_PROVIDER=twilio
SMS_API_KEY=your-production-sms-api-key
SMS_API_SECRET=your-production-sms-api-secret
SMS_FROM_NUMBER=your-production-sms-from-number

# Twilio Configuration (Production)
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=your-production-twilio-phone-number

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1

# Email Provider (Production)
EMAIL_PROVIDER=sendgrid
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your-production-sendgrid-api-key

# Feature Flag Configuration (Pioneer - Production)
PIONEER_URL=https://pioneer.production.com
PIONEER_API_KEY=your-production-pioneer-api-key

# MinIO Storage Configuration (Production)
MINIO_ENDPOINT=minio.production.com:9000
MINIO_ACCESS_KEY=production-minio-access-key
MINIO_SECRET_KEY=production-minio-secret-key
MINIO_BUCKET_NAME=agentmitra-production-media
MINIO_USE_SSL=true
MINIO_CDN_BASE_URL=https://cdn.production.com/agentmitra-production-media

# File Upload
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4,video/avi

# Compliance (Production)
IRDAI_COMPLIANCE_ENABLED=true
DPDP_COMPLIANCE_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_ENABLED=true

# Content Management
CONTENT_MAX_FILE_SIZE_MB=100
CONTENT_ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/mkv,video/webm
CONTENT_ALLOWED_DOC_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
CONTENT_CDN_ENABLED=true
CONTENT_COMPRESSION_ENABLED=true

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_CACHE_TTL=3600
ANALYTICS_REPORTING_ENABLED=true

# Chatbot Configuration
CHATBOT_ENABLED=true
CHATBOT_MODEL=gpt-4
CHATBOT_TEMPERATURE=0.7
CHATBOT_MAX_TOKENS=500
CHATBOT_LANGUAGE=en
CHATBOT_AUTO_ESCALATION_ENABLED=true
CHATBOT_PROACTIVE_SUGGESTIONS_ENABLED=true

# Database Schema
DB_SCHEMA=lic_schema

# Logging (Production)
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/agentmitra.log
LOG_JSON_FORMAT=true

# Metrics (Production)
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_ENABLED=true
