# Agent Mitra - Staging Environment Configuration
# Copy this file to env.staging and update values for your staging environment

# Application
APP_NAME=Agent Mitra API (Staging)
APP_VERSION=0.1.0-staging
DEBUG=false
ENVIRONMENT=staging

# Server
API_HOST=0.0.0.0
API_PORT=8012

# Database (Staging)
DATABASE_URL=postgresql://manish:agentmitra_staging@localhost:5432/agentmitra_staging

# Redis (Staging)
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# Security & Authentication
JWT_SECRET_KEY=staging-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_PER_HOUR=10

# Rate Limiting (Staging - more permissive than production)
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=500/minute
RATE_LIMIT_AUTH=5000/hour
RATE_LIMIT_OTP=100/hour
RATE_LIMIT_IMPORT=100/minute
RATE_LIMIT_ANALYTICS=1000/minute

# External APIs
OPENAI_API_KEY=your-staging-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=300
OPENAI_TEMPERATURE=0.7

# SMS Provider (Staging)
SMS_PROVIDER=twilio
SMS_API_KEY=your-staging-sms-api-key
SMS_API_SECRET=your-staging-sms-api-secret
SMS_FROM_NUMBER=your-staging-sms-from-number

# Twilio Configuration (Staging)
TWILIO_ACCOUNT_SID=your-staging-twilio-account-sid
TWILIO_AUTH_TOKEN=your-staging-twilio-auth-token
TWILIO_PHONE_NUMBER=your-staging-twilio-phone-number

# AWS Configuration (Staging)
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret-key
AWS_REGION=us-east-1

# Email Provider (Staging)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-staging-email@gmail.com
EMAIL_PASSWORD=your-staging-email-app-password

# Feature Flag Configuration (Pioneer - Staging)
PIONEER_URL=http://pioneer-staging:8080
PIONEER_API_KEY=your-staging-pioneer-api-key

# MinIO Storage Configuration (Staging)
MINIO_ENDPOINT=minio-staging:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=agentmitra-staging-media
MINIO_USE_SSL=false
MINIO_CDN_BASE_URL=http://minio-staging:9000/agentmitra-staging-media

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4,video/avi

# Compliance (Staging)
IRDAI_COMPLIANCE_ENABLED=true
DPDP_COMPLIANCE_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_ENABLED=false

# Content Management
CONTENT_MAX_FILE_SIZE_MB=50
CONTENT_ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/mkv,video/webm
CONTENT_ALLOWED_DOC_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
CONTENT_CDN_ENABLED=true
CONTENT_COMPRESSION_ENABLED=true

# Video Tutorial System
VIDEO_TRANSCRIPTION_AUTO=false

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_CACHE_TTL=1800
ANALYTICS_REPORTING_ENABLED=true

# Chatbot Configuration
CHATBOT_ENABLED=true
CHATBOT_MODEL=gpt-3.5-turbo
CHATBOT_TEMPERATURE=0.7
CHATBOT_MAX_TOKENS=300
CHATBOT_LANGUAGE=en
CHATBOT_AUTO_ESCALATION_ENABLED=true
CHATBOT_PROACTIVE_SUGGESTIONS_ENABLED=true

# Database Schema
DB_SCHEMA=lic_schema

# Logging (Staging)
LOG_LEVEL=INFO
LOG_FILE=/app/logs/agentmitra-staging.log
LOG_JSON_FORMAT=true

# Metrics (Staging)
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_ENABLED=true
