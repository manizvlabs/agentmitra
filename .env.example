# ========================================
# AGENT MITRA FLUTTER APP ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and customize values for your environment
# DO NOT commit .env file to version control

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=Agent Mitra
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ========================================
# API CONFIGURATION
# ========================================
API_BASE_URL=http://localhost:8012
API_VERSION=/api/v1
API_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_SECONDS=2

# ========================================
# AUTHENTICATION
# ========================================
JWT_ACCESS_TOKEN_KEY=agent_mitra_access_token
JWT_REFRESH_TOKEN_KEY=agent_mitra_refresh_token
BIOMETRIC_ENABLED=true
AUTO_LOGIN_ENABLED=true
SESSION_TIMEOUT_MINUTES=60

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_CHATBOT=true
ENABLE_VIDEO_TUTORIALS=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_VOICE_INPUT=false
ENABLE_FILE_ATTACHMENTS=true

# ========================================
# EXTERNAL SERVICES
# ========================================
# WhatsApp Business
WHATSAPP_BUSINESS_NUMBER=+919876543210
WHATSAPP_WEB_URL=https://wa.me/

# CDN Configuration
CDN_BASE_URL=https://cdn.agentmitra.com
CDN_IMAGE_QUALITY=80
CDN_VIDEO_QUALITY=720p

# ========================================
# PAYMENT GATEWAYS
# ========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ========================================
# ANALYTICS & MONITORING
# ========================================
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true

# ========================================
# STORAGE & CACHE
# ========================================
CACHE_MAX_SIZE_MB=50
CACHE_TTL_HOURS=24
LOCAL_STORAGE_ENCRYPTION_ENABLED=true

# ========================================
# UI/UX CONFIGURATION
# ========================================
THEME_MODE=system
LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te
DATE_FORMAT=dd/MM/yyyy
TIME_FORMAT=HH:mm
CURRENCY_SYMBOL=â‚¹
NUMBER_FORMAT=en_IN

# ========================================
# NOTIFICATION SETTINGS
# ========================================
NOTIFICATION_SOUND_ENABLED=true
NOTIFICATION_VIBRATION_ENABLED=true
NOTIFICATION_BADGE_ENABLED=true
PUSH_NOTIFICATION_ENABLED=true

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
LOG_LEVEL=info
ENABLE_DEVELOPER_OPTIONS=false
MOCK_DATA_ENABLED=false
API_LOGGING_ENABLED=true

# ========================================
# COMPLIANCE & SECURITY
# ========================================
DATA_ENCRYPTION_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true
SCREENSHOT_PREVENTION_ENABLED=false
ROOT_DETECTION_ENABLED=true

# ========================================
# PERFORMANCE SETTINGS
# ========================================
IMAGE_COMPRESSION_QUALITY=80
VIDEO_COMPRESSION_ENABLED=true
LAZY_LOADING_ENABLED=true
PAGINATION_PAGE_SIZE=20

# ========================================
# INTEGRATION KEYS (FOR DEVELOPMENT)
# ========================================
# These should be moved to secure key management in production
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MESSAGING_SENDER_ID=your_firebase_sender_id

# Pioneer Feature Flags
PIONEER_ENABLED=true
PIONEER_URL=http://localhost:4001
PIONEER_API_KEY=your_pioneer_api_key
PIONEER_SCOUT_URL=http://localhost:4002

# ========================================
# PLATFORM SPECIFIC SETTINGS
# ========================================
# iOS specific
IOS_APP_STORE_ID=com.agentmitra.app
IOS_DEEP_LINK_SCHEME=agentmitra

# Android specific
ANDROID_PACKAGE_NAME=com.agentmitra.app
ANDROID_DEEP_LINK_SCHEME=agentmitra
ANDROID_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.agentmitra.app

# ========================================
# THIRD PARTY INTEGRATIONS
# ========================================
# Social login
GOOGLE_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Chat support
INTERCOM_APP_ID=your_intercom_app_id
ZENDESK_URL=your_zendesk_url

# ========================================
# EXPERIMENTAL FEATURES
# ========================================
ENABLE_AI_INSIGHTS=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_VOICE_COMMANDS=false
ENABLE_AR_PREVIEW=false
